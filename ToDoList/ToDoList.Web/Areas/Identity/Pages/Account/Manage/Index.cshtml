@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage"/>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled/>
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ApplicationUser.Nickname" class="form-control" placeholder="Please enter your nickname."/>
                <label asp-for="Input.ApplicationUser.Nickname" class="form-label"></label>
                <span asp-validation-for="Input.ApplicationUser.Nickname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Input.ApplicationUser.Group1Id" asp-items="@Model.Input.Groups1" class="form-select">
                </select>
                <label asp-for="Input.ApplicationUser.Group1Id"></label>
                <span asp-validation-for="Input.ApplicationUser.Group1Id" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Input.ApplicationUser.Group2Id" asp-items="@Model.Input.Groups2" class="form-select">
                </select>
                <label asp-for="Input.ApplicationUser.Group2Id"></label>
                <span asp-validation-for="Input.ApplicationUser.Group2Id" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}