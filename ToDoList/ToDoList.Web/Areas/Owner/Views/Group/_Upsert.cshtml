@model Group

<div class="form-floating py-2 col-12">
    <input asp-for="Name" class="form-control border-0 shadow" placeholder="Name"/>
    <label asp-for="Name" class="ms-2"></label>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="py-2 form-floating col-12">
    <select asp-for="GroupType" class="form-select border-0 shadow" asp-items="@ViewBag.Groups">
    </select>
    <span asp-validation-for="GroupType" class="text-danger"></span>
    <label id="Group3IdLabel" class="ms-2" asp-for="GroupType">Group</label>
</div>