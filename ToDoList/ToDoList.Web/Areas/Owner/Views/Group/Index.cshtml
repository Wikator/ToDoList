@model IEnumerable<Group>

@{
	ViewData["Title"] = "Groups";
}

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-black py-2">Groups</h1>
			</div>
		</div>
	</div>
	<div class="card-body bg-primary bg-gradient p-4">
		<div class="row pt-2">
			<div class="col-12 text-end">
				<a asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> &nbsp; Create New Group
				</a>
			</div>
		</div>

		<br /><br />

		<div class="table-responsive">
			<table class="table table-striped table-bordered" style="width:100%">
				<thead>
					<tr>
						<th>
							Name
						</th>
						<th>
							English
						</th>
						<th>
							Action
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var obj in Model)
					{
						<tr>
							<td width="55%">
								@obj.Name
							</td>
							<td width="20%">
								@obj.GroupType
							<td width="25%">
								<div class="w-75 btn-group" role="group">
									<a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
									<a onCLick=Delete('/Owner/Group/Delete/@obj.Id') class="btn btn-danger mx-2"><i class="bi bi-x-circle"></i> Delete</a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

<br />
<br />



@section Scripts {
	<script src="~/js/delete.js"></script>
}
