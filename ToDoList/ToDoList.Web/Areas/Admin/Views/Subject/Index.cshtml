@model IEnumerable<Subject>

@{
    ViewData["Title"] = "Subjects";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-black py-2">Subjects</h1>
            </div>
        </div>
    </div>
    <div class="card-body bg-primary bg-gradient p-4">
        <div class="row pt-2">
            <div class="col-12 text-end">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New Subject
                </a>
            </div>
        </div>

        <br/><br/>

        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="width:100%">
                <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="75%">
                            @obj.Name
                        </td>
                        <td width="15%">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a onCLick=Delete('/Admin/Subject/Delete/@obj.Id'); class="btn btn-danger mx-2"><i class="bi bi-x-circle"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

    </div>
</div>


@section Scripts {
    <script src="~/js/delete.js"></script>
}