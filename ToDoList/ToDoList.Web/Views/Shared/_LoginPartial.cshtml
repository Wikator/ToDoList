@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav d-flex">
    @if (SignInManager.IsSignedIn(User))
    {
        <navbar-link id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</navbar-link>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <navbar-link id="register" asp-area="Identity" asp-page="/Account/Register">Register</navbar-link>
        <navbar-link id="login" asp-area="Identity" asp-page="/Account/Login">Login</navbar-link>
    }
</ul>
